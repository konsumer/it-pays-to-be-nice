<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.jetboystudio.it-pays-to-be-nice"
	version 	= "1.0.0">

	<name>It Pays To Be Nice</name>

	<description>
		A social-tipping app
	</description>

	<author href="https://github.com/konsumer/it-pays-to-be-nice"
		email="konsumer@jetboystudio.com">
		David Konsumer
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icon.png" gap:role="default" />
    <gap:splash src="default.png" />
	<feature name="http://api.phonegap.com/1.0/network"/>
	<preference name="autorotate" value="false" readonly="true"/>
</widget>
